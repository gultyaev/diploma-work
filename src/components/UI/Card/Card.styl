@import "../../../variables.styl"

.card
	width 100%
	height auto
	border-radius 10px
	box-shadow 2px 2px 5px 0 lighten(black, 50%)
	margin-bottom 10px
	padding 10px

	h3
		font-size 1.5em
		font-family MAJOR-FONT
		position relative
		display inline-block
		margin-bottom 15px

		&:after
			content ''
			display block
			height 100%
			width 80%
			border-bottom 1px solid BLUE
			position absolute
			top 0
			left 0