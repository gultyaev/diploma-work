@import "../../../variables.styl"

.footer
	height 120px
	width 100%
	border-top 2px solid BLACK

.footer--col1
	padding-left 50px
	width 50%
	float left

.footer--col2
	width 50%
	float left
	text-align center
	line-height 120px
	font-size 1.5em

.footer--link-item
	line-height 1.5em
	transition color 0.2s ease

	&:visited
		color BLUE
	&:hover
		color red
	&:active
		color rebeccapurple

	&.active
		text-decoration underline